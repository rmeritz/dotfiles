[init]
        templatedir = ~/.git_template
[user]
	name = Rebecca Meritz
	email = rebecca@meritz.com
[color]
	status = auto
        diff = auto
[core]
	excludesfile = /home/rebecca/.gitignore_global
[push]
        default = current
[gitsh]
        defaultCommand = status -s
	gitCommand = /usr/bin/hub
[alias]
        co = checkout
        a = add -p
        aa = add .
        c = commit -m
        cv = commit -v
        p = push
        s = status -s
        pr = pull-request
        ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
