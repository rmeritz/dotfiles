spec() {
  if [ -x script/spec ]; then
    bundle exec spec $@
  elif [ -x bin/rspec ]; then
    bundle exec rspec $@
  else
    echo "Unknown server runner" >&2
    return 1
  fi
}

server() {
  if [ -x script/server ]; then
    bundle exec ./script/server webrick -p 3000
  elif [ -x bin/rails ]; then
    ./bin/rails s -p 3001
  else
    echo "Unknown server runner" >&2
    return 1
  fi
}

console() {
  if [ -x script/console ]; then
    bundle exec ./script/console --irb=`which pry`
  elif [ -x bin/rails ]; then
    ./bin/rails console
  else
    echo "Unknown console runner" >&2
    return 1
  fi
}

dbconsole() {
  if [ -x script/dbconsole ]; then
    bundle exec ./script/dbconsole
  elif [ -x bin/rails ]; then
    ./bin/rails dbconsole
  else
    echo "Unknown dbconsole runner" >&2
    return 1
  fi
}

open_new_tab() {
  WID=$(xprop -root | grep "_NET_ACTIVE_WINDOW(WINDOW)" | awk '{print $5}')
  xdotool windowfocus $WID
  xdotool key ctrl+shift+t
}

rails_setup_tabs() {
  BASENAME=`basename $DIR`

  xdotool type "cd $DIR && gvim& ."
  xdotool type "cd $DIR && title git && gsh"

  open_new_tab
  xdotool type "cd $DIR && title $BASENAME"

  open_new_tab
  xdotool type "cd $DIR && title server && server"

  open_new_tab
  xdotool type "cd $DIR && title console && console "

  open_new_tab
  xdotool type "cd $DIR && title dbconsole && dbconsole "
  sleep 1
  xdotool type "rebecca"

  xdotool key super+Right
  xdotool key alt+1
}

ng() {
  DIR=~/hemnet-ng
  rails_setup_tabs
}

kp() {
  DIR=~/kundportalen
  rails_setup_tabs
}

bs() {
  DIR=~/broker-stats
  rails_setup_tabs
}

tiles() {
  DIR=~/hemnet-tiles

  xdotool type "cd $DIR && gvim& ."
  xdotool type "cd $DIR && title git && gsh"

  open_new_tab
  xdotool type "cd $DIR && title tilesE"

  open_new_tab
  xdotool type "cd $DIR && title server && node app.js"

  open_new_tab
  xdotool type "cd $DIR && title console && node"

  xdotool key super+Right
  xdotool key alt+1
}
